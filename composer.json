{
    "name": "spekulatius/phpscraper",
    "description": "An oppinionated way to access the web. See tests/ for examples.",
    "keywords": [
        "PHP scraper",
        "PHP scraping",
        "web scraping",
        "PHP library",
        "web-access"
    ],
    "homepage": "https://phpscraper.de",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Thaleikis",
            "homepage": "https://peterthaleikis.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "fabpot/goutte": "^4.0",
        "symfony/dom-crawler": "^5.0",
        "jeremykendall/php-domain-parser": "^5.6",
        "donatello-za/rake-php-plus": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "spekulatius\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
